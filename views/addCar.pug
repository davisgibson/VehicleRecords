html
    head
        title= 'Add Car'
        -var carTypes= types
    body    
        
        form(method="get" action="/pushCar")
            h3 Name:
            input(type="text", name="name" required)/ 
            label(for='make') Make:
                select#make(name="make" required)
                    
            h3 Model:
                select#model(name="model" required)
                    option="Fusion"
            h3 Color:
                select#color(name="color" required)
            h3 Year:
                select#year(name="year" required)
            h3 Miles:
            input(type="number", name="miles" required) 
            h3 Description:
                textArea(name="description" required)
            button(type="submit" formAction="/pushCar") Add
                
script(src="/scripts/models.js")

            